{
    "name": "mostly-serious/craft-marker",
    "description": "Easily add Marker.io to your CraftCMS site.",
    "type": "craft-plugin",
    "license": "proprietary",
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.9.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "mostlyserious\\craftmarker\\": "src/"
        }
    },
    "extra": {
        "handle": "marker",
        "name": "Marker",
        "developer": "Mostly Serious",
        "documentationUrl": ""
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}

